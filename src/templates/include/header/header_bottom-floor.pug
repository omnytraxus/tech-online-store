                    a.items-menu__desktopPc(href="#")
                        .items-menu__desktopPc-block Desktop PCs
                    a.items-menu__networkingDevices(href="#")
                        .items-menu__networkingDevices-block Networking Devices
                    a.items-menu__printersScanners(href="#")
                        .items-menu__printersScanners-block Printers & Scanners
                    a.items-menu__PcParts(href="#")
                        .items-menu__PcParts-block PC Parts
                    a.items-menu__otherProducts(href="#")
                        .items-menu__otherProducts-block All Other Products
                    a.items-menu__repairs(href="#")
                        .items-menu__repairs-block Repairs
