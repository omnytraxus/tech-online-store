                .bottom-floor__items-search
                    button.items-search__button.search-input-open
                        svg(width="17" height="16" viewBox="0 0 17 16" fill="none")
                            path(d=search fill="black" stroke="black" stroke-width="0.2")
                    button.items-search__button.search-input-close.search-disactive
                        svg(width="19" height="19" viewBox="0 0 19 19" fill="none")
                            path(d="M3.8457 3.84613L15.1535 15.1539" stroke="#0156FF" stroke-width="2.4" stroke-linecap="round")
